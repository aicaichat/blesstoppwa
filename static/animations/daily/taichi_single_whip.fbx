# 太极单鞭动画FBX文件
# 包含经典的太极单鞭动作
# 动画时长: 8秒
# 特点: 一手成勾手，一手推掌，身体侧转

FBXHeaderExtension:  {
	FBXHeaderVersion: 1003
	FBXVersion: 7400
	Creator: "Tai Chi Animation System"
	SceneInfo: "SceneInfo::GlobalInfo", "UserData" {
		MetaData:  {
			Title: "Tai Chi Single Whip Animation"
			Subject: "Single whip movement from Yang style tai chi"
			Keywords: "taichi,single whip,yang style,martial arts"
			Comment: "Classic tai chi movement with hook hand and palm push"
		}
	}
}

# 动画数据
Objects:  {
	# 右手勾手动作
	AnimationCurveNode: "RightHand_Hook", "" {
		# 手指弯曲成勾手姿势
		# 手腕下沉
		# 配合手臂外展
	}
	
	# 左手推掌
	AnimationCurveNode: "LeftHand_Push", "" {
		# 掌心向前推出
		# 手臂伸展但保持柔和
		# 配合腰部转动
	}
	
	# 身体转向
	AnimationCurveNode: "Body_Turn", "" {
		# 腰部带动整体转向
		# 重心转移
		# 保持上虚下实
	}
} 